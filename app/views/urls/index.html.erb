<%= link_to :new, new_url_path %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Original</th>
      <th>Short</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @urls.each do |url| %>
      <tr>
        <td><%= url.id %></td>
        <td><%= url.original %></td>
        <td><%= url.short %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Visit https://joes-shurl.herokuapp.com/(id) or https://joes-shurl.herokuapp.com/alt/(short) to be redirected.
